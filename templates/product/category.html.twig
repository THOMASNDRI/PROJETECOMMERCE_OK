{% extends "base.html.twig" %}

{% block title %}
	Category :
	{{ category.name }}
{% endblock %}

{% block content %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Acceuil</a>
		</li>
		<li class="breadcrumb-item active">{{category.name}}</li>
	</ol>
	<div class="row">
		{% for prod in category.products %}
			<div class="col-3">
				{% include	"product/_product_card.html.twig" with {'p': prod} %}
			</div>

		{% endfor %}
	</div>
{% endblock %}
