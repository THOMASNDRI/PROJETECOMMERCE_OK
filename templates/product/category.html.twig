{% extends "base.html.twig" %}

{% block title %}
	Category :
	{{ category.name }}
{% endblock %}

{% block content %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">Acceuil</a>
		</li>
		<li class="breadcrumb-item active">{{category.name}}</li>
	</ol>
	<div class="row">
		{% for prod in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ prod.mainPicture }}" , class="img-fluid" , alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{ prod.name }}
							({{ prod.price /100 }}
							&euro; )</h4>
						<span class="badge bg-info">
							{{ prod.category.name }}
						</span>
						<p class="card-text">
							{{ prod.shortDescription }}
						</p>
						<a href="{{ path('product_show', {'category_slug': prod.category.slug, 'slug': prod.slug})}}" class="btn btn-primary btn-sm">DÃ©tails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>

		{% endfor %}
	</div>
{% endblock %}
